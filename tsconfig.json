{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@social/auths/*": ["src/modules/auths/*"],
      "@social/users/*": ["src/modules/users/*"],
      "@social/mails/*": ["src/modules/mails/*"],
      "@social/decorators/*": ["src/libs/decorators/*"],
      "@social/utils/*": ["src/utils/*"],
      "@social/configs/*": ["src/configs/*"],
      "@social/services/*": ["src/services/*"],
      "@social/authentication/*": ["src/libs/authentication/*"],
      "@social/guards/*": ["src/libs/guards/*"],
      "@social/types/*": ["src/libs/types/*"]
    }
  }
}
